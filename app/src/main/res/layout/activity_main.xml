<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tulipanes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="669dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pleasepleaseme"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="309dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:text=""
            android:textSize="24sp"

            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="309dp" />


        <EditText
            android:id="@+id/editTextUsuario"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ricardo"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="388dp" />


        <EditText
            android:id="@+id/editTextClave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextmarco"
            android:ems="10"
            android:hint="Escribir ContraseÃ±a"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/colorCeleste"
            android:text="INGRESAR"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="500dp"
            android:onClick="onClickIngresar" />


    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>